	},
	{
		text: "Có wifi",
	},
	{
		text: "Có bán nước giải khát",
	},
	{
		text: "Hỗ trợ người khuyết tật",
	},
	{
		text: "Có hỗ trợ gộp bàn số lượng lớn",
	},
	{
		text: "Bán mang về",
	},
];

const opens: {
	[x: string]: { start?: string; end?: string };
}[] = [
	{
		"thứ 2": {
			start: "7:00",
			end: "11:30",
		},
	},
	{
		"thứ 3": {
			start: "7:00",
